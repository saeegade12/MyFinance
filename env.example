# =============================================================================
# FinancePilot Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string (required)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/financepilot

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the server to run on (default: 5000)
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development
LOCAL_DEV_AUTH=true

# =============================================================================
# AUTHENTICATION & SESSION
# =============================================================================
# Session secret for encrypting session data (required)
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-here

# Replit authentication configuration (required for Replit deployment)
# Comma-separated list of allowed domains
REPLIT_DOMAINS=your-repl-name.your-username.repl.co

# Replit OIDC issuer URL (optional, defaults to https://replit.com/oidc)
ISSUER_URL=https://replit.com/oidc

# Replit project ID (auto-set in Replit environment)
REPL_ID=your-repl-id

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================
# SMTP server configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# =============================================================================
# AI SERVICES (Future Enhancement)
# =============================================================================
# OpenAI API key for AI categorization (optional)
# OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for receipt uploads (in bytes, default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for receipt uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true
